{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS", 
    "rootDir": "./", 
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
  }
}

